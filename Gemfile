source 'https://rubygems.org'

ruby '1.9.3'

gem 'rails'

gem 'bcrypt-ruby', :require => 'bcrypt'
gem 'bootstrap-sass'
gem 'dynamic_form'
gem 'haml-rails'
gem 'jquery-rails'
gem 'pg'
gem 'stripe'
gem 'strong_parameters'
gem 'thin'
gem 'uuidtools'

group :assets do
  gem 'coffee-rails'
  gem 'sass-rails'
  gem 'uglifier'
end

group :development do
  gem 'quiet_assets'
end

group :development, :test do
  gem 'factory_girl_rails'
  gem 'faker'
  gem 'jasmine'
  gem 'rails_best_practices'
  gem 'rspec-rails'
  gem 'shoulda-matchers'
end

group :test do
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'rb-inotify'
  gem 'simplecov'
  gem 'spork'
  gem 'turn', :require => false
  gem 'vcr'
  gem 'webmock'
end
