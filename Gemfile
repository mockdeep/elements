source :rubygems

ruby '1.9.3'

gem 'rails'

gem 'haml-rails'
gem 'uuidtools'
gem 'bcrypt-ruby', :require => 'bcrypt'
gem 'dynamic_form'
gem 'pg'
gem 'thin'
gem 'jit-rails'
gem 'd3_rails'
gem 'rabl'
gem 'strong_parameters'
gem 'stripe'

group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

group :test do
  gem 'turn', :require => false
  gem 'factory_girl_rails'
  gem 'spork'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'rb-inotify'
  gem 'simplecov'
  gem 'fakeweb'
end

group :development do
  gem 'quiet_assets'
end

group :test, :development do
  gem 'rspec-rails'
  gem 'jasmine'
  gem 'faker'
  gem 'rails_best_practices'
  gem 'shoulda-matchers'
end
